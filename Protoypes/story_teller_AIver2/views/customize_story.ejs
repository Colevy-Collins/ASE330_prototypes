<!DOCTYPE html>
<html>
<head>
    <title>Selectors Form</title>
</head>
<body>
    <h1>Please make your selections</h1>
    <form action="/api/submit-form" method="post">
        <% 
        const selectors = [
            { id: 1, name: 'Color', description: 'Select your favorite color:', options: ['Red', 'Green', 'Blue'] },
            { id: 2, name: 'Car Brand', description: 'Choose a car brand you prefer:', options: ['Toyota', 'Ford', 'BMW'] },
            { id: 3, name: 'Music Genre', description: 'What is your preferred music genre?', options: ['Rock', 'Hip Hop', 'Jazz'] }
        ];
        selectors.forEach(selector => {
        %>
            <div>
                <strong><%= selector.name %>:</strong>
                <p><%= selector.description %></p>
                <select id="selector<%= selector.id %>" name="selector<%= selector.id %>">
                    <% selector.options.forEach(option => { %>
                        <option value="<%= option %>"><%= option %></option>
                    <% }); %>
                </select>
            </div>
            <br>
        <% }); %>
        <button type="submit">Submit</button>
    </form>
</body>
</html>